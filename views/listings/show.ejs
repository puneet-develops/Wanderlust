<% layout("/layouts/boilerplate.ejs")%>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details</h3>
        </div>
            <div class="card col-6 offset-3 show-card">
                <img src="<%= listitem.image.url %>" class="card-img-top show-img" alt="Listing_image">
                <div class="card-body">
                    <p class="card-text">
                       <b> <%= listitem.title %></b><br/>
                        <%= listitem.description %> <br>                 
                        &#8377;<%= listitem.price ? listitem.price.toLocaleString("en-IN") : "N/A" %> /night <br> 
                        <%= listitem.location %> <br>
                        <%= listitem.country %> <br>
                    </p>
                </div>
            </div>
            <br>
    
    <div class="btns">
        <a href="/listings/<%= listitem._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn"> Edit</a>
    
    
    <form action="/listings/<%= listitem._id %>?_method=DELETE" method="post">
        <button class="btn btn-dark offset-5">Delete </button>
    </form>

</div>
</div>