<% layout("/layouts/boilerplate.ejs")%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <!-- <br><br> -->
            <h3>Create a new listing</h3>
            <form action="/listings" method="post">
                
                
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Add a catchy Title" type="text" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="" class="form-control"></textarea>

                </div>
                <div class="mb-3">
                    <label for="image_name" class="form-label">Image Name</label>
                    <input name="listing.image-name[imageName]" placeholder="Enter image name " class="form-control">
                </div>
                <div class="mb-3">
                    <label for="image_url" class="form-label">Image Link</label>
                    <input name="listing.image-url[imageUrl]" placeholder="Enter image url  " type="text"
                        class="form-control">
                </div>


                <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="Enter price" type="number" class="form-control">
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" placeholder="Enter country name"
                                class="form-control">
                        </div>              
                </div>


                <div class="mb-3">
                    <label for="location" class="form-label">Locatin</label>
                    <input name="listing[location]" placeholder="Enter location" type="text" class="form-control">
                </div>
                <br>
                <button class="btn btn-dark add-btn">Add</button>
            </form>
            <br><br>
        </div>
    </div>